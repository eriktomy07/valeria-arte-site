---
import Layout from "../layouts/Layout.astro";
import { obras } from "../data/obras";
import Artwork from "../components/Artwork.astro";
---
<Layout title="Valeria • Obras">
  <section class="mb-6">
    <h2 class="text-2xl md:text-3xl font-bold tracking-tight">Obras</h2>
    <p class="text-slate-600 mt-1">Explorá la serie con audio descriptivo.</p>
  </section>

  <section class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {obras.map((o) => <Artwork obra={o} />)}
  </section>
</Layout>